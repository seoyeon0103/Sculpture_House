generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group{
  group_id   String @id @default(uuid())
  name  String
  password String
  groupImageUrl String
  groupIsPublic Boolean
  introduction String
  groupLikeCount Int @default(0)
  groupPostCount Int @default(0)
  createdAt DateTime @default(now())
  post Post[]
}

model Post{
  post_id String @id @default(uuid())
  group_id String
  nickname String
  title String
  content String
  postPassword String?
  postImageUrl String
  tags String[]
  location String
  moment DateTime
  postIsPublic Boolean
  postLikeCount Int @default(0)
  commentCount Int @default(0)
  createdAT DateTime @default(now())
  Group Group @relation(fields: [group_id], references: [group_id])
  Comment Comment[]
}

model Comment{
  comment_id String @id @default(uuid())
  post_id String
  nickname String
  commentContent String
  createdAt DateTime @default(now())
  Post Post @relation(fields: [post_id], references: [post_id])
}